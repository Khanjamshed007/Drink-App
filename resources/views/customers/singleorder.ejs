<section class="status">
    <div class="container mx-auto">
        <div class="status-box w-2/3 mx-auto">
            <div class="flex items-center justify-between mb-12">
                <h1 class="text-xl font-bold">Track Delivery Status</h1>
                <h6 class="bg-white py-1 rounded-lg px-4 text-blue-600 ">Order_Id:<%=order._id%>
                        <br>
                            Name:<%=user.name%>
                            <br>
                            Phone:<%=user.phone%>
                </h6>
                <input id="hiddenInput" type="hidden" value="<%=JSON.stringify(order)%>">
            </div>
            <ul>
                <li class="status-line text-xl pb-16" data-status="order_placed"><span>Order Placed</span></li>
                <li class="status-line text-xl pb-16" data-status="confirmed"><span>Order Confirmation</span></li>
                <li class="status-line text-xl pb-16" data-status="On The Way"><span>Out Of Delivery</span></li>
                <li class="status-line text-xl pb-16" data-status="Delivered"><span>Deliverd</span></li>
                <li class="status-line text-xl" data-status="Completed"><span>Completed</span></li>
            </ul>

        </div>
    </div>
</section>